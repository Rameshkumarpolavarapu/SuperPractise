<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayTheme"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <ImageView
        android:id="@+id/fb"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        app:srcCompat="@drawable/ic_facebook_logo_button"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/google"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignRight="@id/fb"
        android:layout_toEndOf="@id/fb"
        app:srcCompat="@drawable/ic_google_plus_logo_button"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/twitter"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/fb"
        android:layout_marginEnd="141dp"
        app:srcCompat="@drawable/ic_twitter_logo"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/instagram"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/fb"
        android:layout_marginEnd="60dp"
        app:srcCompat="@drawable/ic_social_instagram_circle"
        tools:ignore="VectorDrawableCompat" />
</RelativeLayout>